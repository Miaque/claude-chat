    "version": "0.2.0",
    "configurations": [
        {
            "name": "worker",
            "type": "debugpy",
            "request": "launch",
            "module": "dramatiq",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "--skip-logging",
                "--processes",
                "1",
                "--threads",
                "1",
                "run_agent_background"
            ]
        },
        {
            "name": "api",
            "type": "debugpy",
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "program": "api.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
        }
    ]
}